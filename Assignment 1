{
	public static void main(String[] args)
	{
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter a number: ");
		int a =sc.nextInt();
		
		if(a%3==0){
			System.out.println(a+" is divisible by 3.");
		}
		else{
			System.out.println(a+" is not divisible by 3.");
		}
		
	}
