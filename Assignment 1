//4) accept two numbers and devide them.
package Assignment;
import java.util.*;
public class First
{
	public static void main(String[] args)
	{
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter a number: ");
		int a =sc.nextInt();
		System.out.println("Enter another number: ");
